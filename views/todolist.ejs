<%- include('partials/header') %>

<head>
    <script
    src="https://kit.fontawesome.com/439883d3d6.js"
    crossorigin="anonymous"
  ></script>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <div class="box-title">
     <img class="icon" src="data:image/png;base64,">
  <h1>La tua To-Do List</h1>
    </div>
<form action="/todolist" method="post">

  <div class="box">
    <div class="box-container">
      <div class="row-list">
        <input id="input" type="text" name="task" placeholder="Add your task" />
        <button type="submit" class="button-add"> +</button>
      </div>
      <div>
</form>
<ul id="list-container">
    <% tasks.forEach(task => { %>
      <li class="<%= task.completed ? 'checked' : '' %>">
        <div class="task-item">
       <span> <%= task.task %></span>

        <% if(!task.completed){%>
            <form action="/todolist/complete/<%= task.id %>" method="post" style="display:inline;">
        </form>
            <% } %>

            <form action="/todolist/delete/<%= task.id %>" method="post"style="display:inline;">
            <button class="btn-trash" type="submit"><i class="fa-solid fa-trash"></i></button>
        </form>
    </div>
        </li>
        <% }); %>
      </ul>
    </div>
  </div>

  <div class="box-logout">
    <a href="/logout">Logout</a>
  </div>
</body>
<%- include('partials/footer') %>
